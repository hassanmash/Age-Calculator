<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackbg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:background="@drawable/cornerbox"
        android:backgroundTint="#33FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/dateText"
                android:maxLines="1"
                android:allowClickWhenDisabled="false"
                android:hint="@string/dateHint"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:autofillHints="Enter date" />
            <Button
                android:id="@+id/datePick"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                app:icon="@android:drawable/ic_menu_month" />
        </LinearLayout>
        <Button
            android:id="@+id/calcBtn"
            android:layout_gravity="center_horizontal"
            android:text="@string/calc"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/black"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/clrBtn"
            android:layout_gravity="center_horizontal"
            android:text="@string/clear"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/black"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/datepicklay"
        android:layout_width="297dp"
        android:background="#bbffffff"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" >
        <DatePicker
            android:id="@+id/dateSelect"
            android:dayOfWeekBackground="@color/black"
            android:layout_width="580dp"
            android:datePickerMode="spinner"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/resBox"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:backgroundTint="#ffffaa"
        android:background="@drawable/cornerbox"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>